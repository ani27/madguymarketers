<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vp6.anish.madguysmarketers.EditCafeActivity"
    tools:showIn="@layout/activity_edit_cafe">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Cafe Name"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:id="@+id/cafe_name"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:singleLine="true"
                />
            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Owner's Name"
                android:layout_below="@+id/cafe_name"
                android:id="@+id/owner_name"
                android:paddingLeft="3dp"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="State"
                android:layout_below="@+id/owner_name"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:singleLine="true"
                android:paddingLeft="1dp"
                android:id="@+id/state"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="City"
                android:layout_below="@+id/state"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:id="@+id/city"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address"
                android:layout_below="@+id/city"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:singleLine="true"
                android:id="@+id/address"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />


            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pin Code"
                android:layout_below="@+id/address"
                android:gravity="center_vertical"
                android:inputType="text"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:id="@+id/pincode"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:singleLine="true"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mobile Number"
                android:layout_below="@+id/pincode"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:inputType="text"
                android:paddingLeft="1dp"
                android:id="@+id/mobile_number"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Hardware Given"
                android:layout_below="@+id/mobile_number"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:id="@+id/hardware"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:weightSum="5"
                android:id="@+id/complete_cafe_status"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/hardware">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="3"
                    android:gravity="bottom"
                    android:textSize="18dp"
                    android:text="Cafe Status"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/spinner_cafe_status"
                    android:entries="@array/status_arrays"
                    android:prompt="@string/cafe_status"
                    android:elevation="3dp"
                    android:spinnerMode="dialog"
                    android:layout_marginTop="24dp">

                </Spinner>
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="2"
                android:id="@+id/complete_map"
                android:layout_below="@+id/complete_cafe_status"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mark Cafe Exact Location"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/map_text"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="15dp"
                        android:gravity="bottom"
                        android:textStyle="bold"
                        android:id="@+id/exact_location"
                        android:textColor="@android:color/holo_blue_light"
                        android:visibility="invisible"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_button"
                    android:text="Map"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:onClick="maplocation"

                    />

            </LinearLayout>


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/complete_map"
                android:text="Save Changes"
                android:onClick="editcafe"/>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
