<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.vp6.anish.madguysmarketers.AddCoachingActivity"
    tools:showIn="@layout/activity_add_coaching">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Coaching Name"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:singleLine="true"
                android:id="@+id/coaching_name"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Director's Name"
                android:layout_below="@+id/coaching_name"
                android:id="@+id/director_name"
                android:paddingLeft="3dp"
                android:gravity="center_vertical"
                android:elevation="1dp"
                android:singleLine="true"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="2"
                android:id="@+id/complete_director_photo"
                android:layout_below="@+id/director_name"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:text="Director's Photo"
                    android:textSize="20dp"
                    android:gravity="bottom"
                    android:id="@+id/director_photo"
                    android:layout_below="@+id/director_name"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"/>

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/director_photo2"
                    android:layout_alignTop="@+id/director_photo"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:src="@drawable/user"
                    android:onClick="adddirectorphoto"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="2"
                android:id="@+id/complete_coaching_photo"
                android:layout_below="@+id/complete_director_photo"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Coaching's Photo"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/coaching_photo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0 photo added"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/no_of_coaching_photo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Add_coaching_photo"
                    android:text="Add Photos"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:layout_marginTop="13dp"
                    android:onClick="addcoachingphoto"

                    />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/complete_coaching_photo"
                android:id="@+id/coaching_photo_recyclerview"
                android:visibility="gone"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="State"
                android:singleLine="true"
                android:layout_below="@+id/coaching_photo_recyclerview"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:id="@+id/state"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="City"
                android:layout_below="@+id/state"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:singleLine="true"
                android:paddingLeft="1dp"
                android:id="@+id/city"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Address"
                android:singleLine="true"
                android:layout_below="@+id/city"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:id="@+id/address"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Pin Code"
                android:layout_below="@+id/address"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:singleLine="true"
                android:inputType="number"
                android:paddingLeft="1dp"
                android:id="@+id/pincode"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mobile Number"
                android:layout_below="@+id/pincode"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:singleLine="true"
                android:inputType="number"
                android:paddingLeft="1dp"
                android:id="@+id/mobile_number"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Hardware Given"
                android:layout_below="@+id/mobile_number"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:singleLine="true"
                android:paddingLeft="1dp"
                android:id="@+id/hardware"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Total Students"
                android:layout_below="@+id/hardware"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:inputType="number"
                android:paddingLeft="1dp"
                android:singleLine="true"
                android:id="@+id/total_student"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="2"
                android:id="@+id/complete_map"
                android:layout_below="@+id/total_student"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Mark Cafe Exact Location"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/map_text"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text=""
                        android:textSize="15dp"
                        android:textStyle="italic"
                        android:gravity="bottom"
                        android:id="@+id/exact_location"
                        android:visibility="invisible"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/map_button"
                    android:text="Map"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:onClick="maplocation"

                    />

            </LinearLayout>





            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="2"
                android:id="@+id/coaching_registration_photo"
                android:layout_below="@+id/complete_map"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Coaching Registration Photo"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/registration_photo_text"
                        android:paddingTop="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0 photo added"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/no_of_coaching_registration_photo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Add_registration_photo"
                    android:text="Add Photos"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:layout_marginTop="13dp"
                    android:onClick="addregistrationphoto"

                    />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/coaching_registration_photo"
                android:id="@+id/registration_photo_recyclerview"
                android:visibility="gone"/>


            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Total Students having mobile phone"
                android:layout_below="@+id/registration_photo_recyclerview"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:paddingLeft="1dp"
                android:inputType="number"
                android:singleLine="true"
                android:id="@+id/total_students_having_mobile_phone"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="2"
                android:id="@+id/studentlist_photo"
                android:layout_below="@+id/total_students_having_mobile_phone"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Student list Photo"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/studentlist_photo_text"
                        android:paddingTop="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0 photo added"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/no_of_studentlist_photo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Add_studentlist_photo"
                    android:text="Add Photos"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:layout_marginTop="13dp"
                    android:onClick="addstudentlistphoto"

                    />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/studentlist_photo"
                android:id="@+id/studentlist_photo_recyclerview"
                android:visibility="gone"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:weightSum="5"
    android:id="@+id/complete_coaching_status"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:layout_below="@+id/studentlist_photo_recyclerview">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:gravity="bottom"
        android:textSize="18dp"
        android:text="@string/coaching_status"/>
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/spinner_coaching_status"
        android:entries="@array/status_arrays"
        android:prompt="@string/coaching_status"
        android:elevation="3dp"
        android:spinnerMode="dialog"
       android:layout_marginTop="20dp">

    </Spinner>
</LinearLayout>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Exam Teaching"
                android:layout_below="@+id/complete_coaching_status"
                android:gravity="center_vertical"
                android:elevation="3dp"
                android:singleLine="true"
                android:paddingLeft="1dp"
                android:id="@+id/exam_teaching"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                />



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:weightSum="2"
                android:id="@+id/partnership_agreement_photo"
                android:layout_below="@+id/exam_teaching"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:weightSum="2"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Partnership Agreement Photo"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/partnership_agreement_photo_text"
                        android:paddingTop="2dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="0 photo added"
                        android:textSize="18dp"
                        android:gravity="bottom"
                        android:id="@+id/no_of_partnership_agreement_photo"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"/>

                </LinearLayout>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/Add_partnership_agreement_photo"
                    android:text="Add Photos"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_weight="1"
                    android:layout_marginTop="13dp"
                    android:onClick="addpartnershipagreementphoto"

                    />

            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:orientation="horizontal"
                android:layout_below="@+id/partnership_agreement_photo"
                android:id="@+id/partnership_agreement_photo_recyclerview"
                android:visibility="gone"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:layout_below="@id/partnership_agreement_photo_recyclerview"
                android:text="Add Coaching"
                android:onClick="addcoaching"/>

        </RelativeLayout>
    </ScrollView>


</RelativeLayout>
