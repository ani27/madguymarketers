<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:elevation="3dp">

        <RelativeLayout
            android:id="@+id/user_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/profile" />

            <TextView
                android:id="@+id/users_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Name"
                android:textColor="@color/icon_disabled"
                android:textSize="17dp" />

            <TextView
                android:id="@+id/users_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/users_name"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Number"
                android:textColor="@color/medium_text_disabled"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/users_added"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/users_number"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/profile_image"
                android:text="Cafe Added"
                android:textColor="@color/medium_text_disabled"
                android:textSize="13dp" />


            <TextView
                android:id="@+id/tv_last_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/users_added"
                android:padding="5dp"
                android:text="Last Location"
                android:textColor="@color/colorPrimary"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/users_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="invisible" />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>